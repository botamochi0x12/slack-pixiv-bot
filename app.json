{
  "name": "slack-pixiv-bot",
  "description": "A Slack bot to post new works by following users.",
  "keywords": ["python", "slack", "pixiv"],
  "env": {
    "PIXIV_BOT_USERNAME": {
      "description": "pixiv login username",
      "required": true
    },
    "PIXIV_BOT_PASSWORD": {
      "description": "base64-encoded pixiv login password",
      "required": true
    },
    "PIXIV_BOT_SLACK_API_TOKEN": {
      "description": "slack api token",
      "required": true
    }
  }
}